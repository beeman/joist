{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "esnext",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@joist/component": ["./packages/component/src/public_api.ts"],
      "@joist/component/addons": ["./packages/component/addons/public_api.ts"],
      "@joist/component/lit_html": ["./packages/component/lit_html/public_api.ts"]
    }
  },
  "exclude": ["node_modules"]
}
